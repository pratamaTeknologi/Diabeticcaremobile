<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".diabetesMelitus.Fragment_slide11"
    android:background="@color/backroundpink">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardslide1"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faktor resiko yang dapat diubah"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans_bold"
                    android:padding="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Pola makan"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans_bold"
                    android:padding="20dp"/>
                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pola makan yang salah dapat mengakibatkan kurang gizi atau kelebihan berat badan. Kedua hal tersebut dapat meningkatkan risiko terkena Diabetes Mellitus. kurang gizi (malnutrisi)
dapat mengganggu fungsi pankreas dan mengakibatkan gangguan sekresi insulin. Sedangkan kelebihan berat badan dapat mengakibatkan gangguan kerja insulin. "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>